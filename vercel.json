{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python", "config": { "maxLambdaSize": "50mb", "includeFiles": ["api/**", "core/**", "io/**", "models/**", "configs/**"], "excludeFiles": "ocr/**" } },
    { "src": "ui/(.*)", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/ui/(.*)", "dest": "/ui/$1" },
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}

